{
    "name": "Bokeh",
    "id": "bokeh",
    "packaging_format": 1,
    "description": {
        "en": "Bokeh is a library resource portal and CMS for libraries",
        "fr": "Bokeh est portail pour les bibliothÃ¨ques et centres de documentation"
    },
    "version": "1.0~ynh1",
    "url": "https://www.bokeh-library-portal.org/",
    "upstream": {
        "license": "free",
        "website": "https://www.bokeh-library-portal.org/",
        "admindoc": "https://wiki.bokeh-library-portal.org/",
        "code": "https://git.afi-sa.net/afi/opacce/"
    },
    "license": "free",
    "maintainer": {
        "name": "Laurent Laffont",
        "email": "llaffont@afi-sa.fr"
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.4-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/bokeh",
                "default": "/bokeh"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "fr"
            },
            {
                "name": "admin",
                "type": "user",
                "help": {
                    "en": "Administrator account login",
                    "fr": "Identifiant du compte administrateur"
                }
            },
            {
                "name": "password",
                "type": "password",
                "help": {
                    "en": "Administrator password",
                    "fr": "Mot de passe du compte administrateur"
                }
            }
        ]
    }
}
